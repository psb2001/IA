<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:orientation="horizontal"
            android:background="@drawable/ticket_background_layout">

            <ImageView
                android:id="@+id/ivLogoRequest"
                android:layout_width="305dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/com_facebook_button_icon_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameRequest"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Turing Fraternity"
                    android:textColor="@color/com_facebook_button_background_color_focused"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#afb1b3"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="PENDING..."
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>